# Application settings
APP_NAME=Audio Diarization Service
APP_VERSION=1.0.0
DEBUG=false

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Database settings
DATABASE_URL=postgresql://user:password@postgres:5432/audio_db

# File storage settings
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=524288000  # 500MB in bytes
MAX_DURATION_HOURS=8     # 8 hours maximum
MAX_DURATION_SECONDS=28800  # 8 hours in seconds

# MinIO S3 Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=audio-files
MINIO_SECURE=false
USE_MINIO=true

# MinIO S3 Storage Settings
USE_MINIO=true
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=audio-files
MINIO_SECURE=false

# Worker Configuration (Controls parallel processing capacity)
# This is the primary way to control how many requests can be processed simultaneously
MAX_WORKERS=3          # Number of worker processes (controls parallel requests)
WORKER_CONCURRENCY=1   # Tasks per worker (keep at 1 for GPU memory safety)
TASK_TIMEOUT=3600      # 1 hour timeout

# Whisper settings
WHISPER_MODEL=medium

# API settings
API_KEY=mvp-api-key-123

# HuggingFace token for pyannote (REQUIRED - get from https://huggingface.co/settings/tokens)
HF_TOKEN=your_huggingface_token_here

# Resource Management
MAX_VRAM_GB=16
MAX_RAM_GB=32